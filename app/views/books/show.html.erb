<% if flash[:notice] %>
     <p style="color:red" id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-socondary btn-block fas fa-user-cog edit_user_27083" %></p>
      </div>

      <h2>New book</h2>
      <%= form_with model: @new_book, local:true do |f| %>
        <label for="book_title">Title</label></br>
        <%= f.text_field :title, autofocus: true, id:"book_title" %>
        <p><label for="book_body">Opinion</label></br>
        <%= f.text_area :body, autofocus: true, id:"book_body" %></p>
        <%= f.submit %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image_id, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg" %></br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
              <td></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>