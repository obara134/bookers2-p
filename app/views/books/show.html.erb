<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <p><%= link_to "", edit_user_registration_path, class: "btn btn-outline-socondary btn-block fas fa-user-cog edit_user_27083" %></p>
      </div>

      <h2>New Book</h2>
      <%= form_with model: @new_book, local:true do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:"book_title" %>
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"book_body" %>
        <%= f.submit %>
      <% end %>
    </div>

    <div class="col-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image_id, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>